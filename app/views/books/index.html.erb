<div class= "container">
  <div class= "row">

  <% if flash[:notice] %>
      <div class= "flash">
        <%= flash[:notice] %>
      </div>
  <% end %>

  <%= render 'users/userinfo', user: @user %>
  <%= render 'books/newbook', book: @book %>

<div class= "col-xs-9">
<h1>Books</h1>
<table class="table table-hover table-inverse">
　<tr>
　　<th></th>
　　<th>Title</th>
   <th>Opinion</th>
   <th></th>
   <th></th>
　</tr>

　　<% @books.each do |book| %>
   <tr>
   <td>
    <%= link_to user_path(book.user) do %>
    <%= attachment_image_tag book.user, :user_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left user-image", fallback: "no_image.jpg" %>
    <% end %>
    </td>
   <td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %>

   </td>
   <td><%= book.body %></td>
   </tr>
   <% end %>
</table>
</div>