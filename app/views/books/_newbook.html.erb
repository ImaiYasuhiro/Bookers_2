<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title, class: "col-xs-12 book_title" %>

    <h4>Body</h4>
    <p><%= f.text_area :body, class: "col-xs-12 book_body" %></p>

    <div class="btn btn-primary col-xs-12">
    <%= f.submit "Create Book" %>
    </div>

  </div>

<% end %>