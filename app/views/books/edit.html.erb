<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>

    <h4>Body</h4>
    <p><%= f.text_area :body, class: "book_body" %></p>

    <p><%= f.submit 'Update Books' , class: "btn btn-primary" %></p>
<% end %>

<%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %>
<%= link_to "Back", books_path, class: "back" %>