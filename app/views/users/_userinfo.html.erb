<% if user_signed_in? %>
<div class= "container">
<div class='col-xs-3'>

    <h2>User info</h2>
    <table class='table'>
    <tr>
      <%= attachment_image_tag user, :user_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left user-image", fallback: "no_image.jpg" %></tr>
        <tr>
        <th>name</th>
        <th><%= user.name %></th>
        </tr>
        <tr>
        <th>inntroduction</th>
        <th><%= user.introduction %></th>
        </tr>
        </table>

        <div class='row'>
        <p><%= link_to " ", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %></p>
        </div>
    <% end %>
